<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="game_client.SettingsPage">

    <Grid>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
            <Button Text="Setting 1" WidthRequest="150" Clicked="OnSetting1Clicked"/>
            <Button Text="Setting 2" WidthRequest="150" Clicked="OnSetting2Clicked"/>
            <Button Text="Save" WidthRequest="150" Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
